<div class="row">
	<% unless current_staff.admin? %>
		<%= link_to 'Book New Seat', new_booking_path, :class => "btn btn-primary" %>
		<div class="row">
			<table class="table table-striped">
		    <thead>
		      <tr>
		        <th>Name</th>
		        <th>Desk</th>
		        <th>From/To</th>
		        <th></th>
		      </tr>
		    </thead>
		    <tbody>
		    	<% @staffs.each do |staff| %>
			      <tr>
			        <td> <%= staff.name %> </td>
			        <td> <%= staff.bookings.last.try(:desk).try(:name) %> </td>
			        <td> <%= "#{staff.bookings.last.from_date.try(:strftime, '%d %b')} - #{staff.bookings.last.to_date.try(:strftime, '%d %b')}" %> </td>
			        <td> <%= link_to 'View', staff_path(staff) %> </td>
			      </tr>
		      <% end %>
		    </tbody>
		  </table>
		</div>
	<% else %>
		<div class="well col-lg-12">
			<%= link_to 'Bookings', bookings_path, :class => "btn btn-primary" %>
			<%= link_to 'Staffs', staffs_path, :class => "btn btn-primary" %>
		</div>
	<% end %>
</div>

